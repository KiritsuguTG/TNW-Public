<?xml version="1.0" encoding="utf-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude">
	<Tags></Tags>
	<Includes>
		<Include
			type="instance"
			source="DATA:BaseObjects/BaseTechStructure.xml" />
		<Include
			type="all"
			source="ART:SI_Helipad.W3X" />
	</Includes>
	<GameObject
		id="NeutralSupportTechStructure"
		inheritFrom="BaseTechStructure"
		EditorName="NeutralSupportTechStructure"
		SelectPortrait="Portrait_Neutral_Airport"
		ButtonImage="Button_Neutral_Airport"
		EditorSorting="STRUCTURE"
		Description="DESC:AirportTechBuilding"
		TypeDescription="TYPE:TechStructure"
		HealthBoxHeightOffset="30">
		<DisplayName
			xai:joinAction="Replace" xmlns:xai="uri:ea.com:eala:asset:instance">Name:AirportTechBuilding</DisplayName>
		<ObjectResourceInfo>
			<BuildCost Account="=$ACCOUNT_ORE" Amount="=$TECH_STRUCTURE_EFFECTIVE_COST" />
		</ObjectResourceInfo>
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="SI_Helipad" />
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<Physics
				id="ModuleTag_Physics"/>
			<ModelConditionUpgrade
				id="ModuleTag_AlliesUSER_2ModelConditionUpgradeClear"
				RemoveConditionFlags="USER_2">
				<TriggeredBy>Upgrade_AlliesFaction</TriggeredBy>
			</ModelConditionUpgrade>
			<ModelConditionUpgrade
				id="ModuleTag_AlliesUSER_3ModelConditionUpgradeClear"
				RemoveConditionFlags="USER_3">
				<TriggeredBy>Upgrade_AlliesFaction</TriggeredBy>
			</ModelConditionUpgrade>
			<ModelConditionUpgrade
				id="ModuleTag_SovietUSER_1ModelConditionUpgradeClear"
				RemoveConditionFlags="USER_1">
				<TriggeredBy>Upgrade_SovietFaction</TriggeredBy>
			</ModelConditionUpgrade>
			<ModelConditionUpgrade
				id="ModuleTag_SovietUSER_3ModelConditionUpgradeClear"
				RemoveConditionFlags="USER_3">
				<TriggeredBy>Upgrade_SovietFaction</TriggeredBy>
			</ModelConditionUpgrade>
			<ModelConditionUpgrade
				id="ModuleTag_JapanUSER_1ModelConditionUpgradeClear"
				RemoveConditionFlags="USER_1">
				<TriggeredBy>Upgrade_JapanFaction</TriggeredBy>
			</ModelConditionUpgrade>
			<ModelConditionUpgrade
				id="ModuleTag_JapanUSER_3ModelConditionUpgradeClear"
				RemoveConditionFlags="USER_2">
				<TriggeredBy>Upgrade_JapanFaction</TriggeredBy>
			</ModelConditionUpgrade>
			<RemoveUpgradeUpgrade
				id="ModuleTag_RemoveUpgradeObjectDefaultAllies">
				<TriggeredBy>Upgrade_AlliesFaction</TriggeredBy>
				<UpgradeToRemove>Upgrade_SovietFaction</UpgradeToRemove>
				<UpgradeToRemove>Upgrade_JapanFaction</UpgradeToRemove>
			</RemoveUpgradeUpgrade>
			<RemoveUpgradeUpgrade
				id="ModuleTag_RemoveUpgradeObjectDefaultSoviet">
				<TriggeredBy>Upgrade_SovietFaction</TriggeredBy>
				<UpgradeToRemove>Upgrade_AlliesFaction</UpgradeToRemove>
				<UpgradeToRemove>Upgrade_JapanFaction</UpgradeToRemove>
			</RemoveUpgradeUpgrade>
			<RemoveUpgradeUpgrade
				id="ModuleTag_RemoveUpgradeObjectDefaultJapan">
				<TriggeredBy>Upgrade_JapanFaction</TriggeredBy>
				<UpgradeToRemove>Upgrade_AlliesFaction</UpgradeToRemove>
				<UpgradeToRemove>Upgrade_SovietFaction</UpgradeToRemove>
			</RemoveUpgradeUpgrade>
			<BuildingDestructionBehavior
				id="ModuleTag_BuildingDestruction"
				FillerMesh="NEWSKIN_FILL">
				<DieMuxData
					DeathTypes="ALL"/>
				<Item
					BonePrefix="BONE_CONTACT_POINT_"
					FX="SovietRefineryHit"
					CreationObject="AlliedBarracks_Debris"
					FlingVelocity="100.0"/>
			</BuildingDestructionBehavior>
			<FXListBehavior
				xai:joinAction="Replace" xmlns:xai="uri:ea.com:eala:asset:instance" id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="ALL"/>
				<Event
					Index="onDeath"
					FX="FX_YU_Hotel02_Explode"/>
			</FXListBehavior>
			<FXListBehavior xai:joinAction="Replace" xmlns:xai="uri:ea.com:eala:asset:instance" id="ModuleTag_DieSound">
				<DieMuxData DeathTypes="ALL"/>
				<Event Index="onDeath" FX="FX_LargeBuildingDieExplosion"/>
			</FXListBehavior>
			<CreateObjectDie
				id="ModuleTag_CreateObjectDie"
				CreationList="NUAirportTechStructure_Die_OCL">
				<DieMuxData
					DeathTypes="ALL"/>
			</CreateObjectDie>
			<DestroyDie
				id="ModuleTag_Die">
				<DieMuxData
					DeathTypes="ALL"/>
			</DestroyDie>
			<FireWeaponUpdate
				id="Upgrade_AirportTechStructureHealthWeapon"
				FireInterval="2s"
				AliveOnly="true">
				<FireWeaponNugget
					WeaponName="AirportTechStructureHealthWeapon"
					OneShot="false" />
			</FireWeaponUpdate>
			<xi:include
				href="DATA:Includes/GenericEngineerContain.xml"/>
			<xi:include
				href="DATA:Includes/GenericBuildingRepair.xml"/>
			<LUAEventList
				id="ModuleTag_LUAEventList"
				EventListName="BuildingPowerFunctions"/>
		</Behaviors>
		<Geometry
			IsSmall="false">
			<Shape
				Type="BOX"
				MajorRadius="30"
				MinorRadius="30"
				Height="5"
				ContactPointGeneration="NONE">
			</Shape>
		</Geometry>
	</GameObject>
</AssetDeclaration>