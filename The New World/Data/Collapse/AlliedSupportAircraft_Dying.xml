		<Include type="all"	source="ART:AUSupportAircraft_D.xml" />
		<Include type="all"	source="ART:AUSupportAircraft_02_D.xml" />
	</Includes>
	<GameObject
		id="AlliedSupportAircraft_Dying"
		EditorName="AlliedSupportAircraft_Dying"
		KindOf="PROJECTILE INERT NO_COLLIDE">
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_ScriptedModelDraw"
				OkToChangeModelColor="true" >
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="AUSupportAircraft" />
					<Texture
						Original="AUSupportAircraft"
						New="AUSupportAircraft_D" />
				<xi:include
					href="DATA:Includes/VehicleCollapseParticles/AircraftDyingCollapseParticles.xml"
					xpointer="xmlns(n=uri:ea.com:eala:asset) xpointer(/n:AircraftDyingCollapseParticles/child::*)" />
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<Physics
				id="ModuleTag_Physics"
				TumbleRandomly="true"
				MaxXRotationVelocity="0"
				MaxYRotationVelocity="50"
				MaxZRotationVelocity="200"
				KillWhenRestingOnGround="true"/>
			<CreateObjectDie
				id="ModuleTag_CreateObjectDie"
				CreationList="AUSupportAircraft_Die_OCL">
				<DieMuxData
					DeathTypes="ALL" />
			</CreateObjectDie>
			<FireWeaponWhenDead
				id="ModuleTag_DeathWeapon"
				DeathWeapon="NormalAircraftDeathWeapon"
				InitiallyActive="true">
				<DieMuxData
					DeathTypes="ALL" />
			</FireWeaponWhenDead>
			<!-- Enhanced Kamikaze -->
			<xi:include
				href="DATA:Includes/JapanKamikazeExplosionTech1.xml"
				xpointer="xmlns(n=uri:ea.com:eala:asset) xpointer(/n:JapanKamikazeExplosionTech1/child::*)" />
			<DestroyDie
				id="ModuleTag_Die">
				<DieMuxData
					DeathTypes="ALL" />
			</DestroyDie>
		</Behaviors>
		<Body>
			<PropBody
				id="ModuleTag_Body" />
		</Body>
	<AudioArraySound>
		<AudioEntry Sound="RA3VehicleExplosionMediumNoDelay" AudioType="soundAmbient" />
	</AudioArraySound>	
		<VisionInfo
			VisionRange="300"
			ShroudClearingRange="300" />		
	</GameObject>
